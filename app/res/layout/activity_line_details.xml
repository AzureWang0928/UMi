<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bupt.umi.userinterface.attention.LineDetailsActivity" >

    <TextView
        android:id="@+id/beauty_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="活动信息"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/doctor_photo"
        android:layout_toRightOf="@+id/doctor_photo"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="姓名：戴安安"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/address_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:gravity="center"
            android:text="联系方式：13103378898"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/doctor_photo"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/beauty_information"
        android:layout_below="@+id/beauty_information"
        android:src="@drawable/doctor_photo" />

    <Button
        android:id="@+id/contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/app_style_background"
        android:text="+ 一键预约整容师"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/event_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contact_button"
        android:layout_alignLeft="@+id/doctor_photo"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/event_style_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/event_style_title"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/event_style_title"
                android:text="·去眼袋\n·韩式双眼皮" />

            <ImageView
                android:id="@+id/event_style_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/event_style" />

            <TextView
                android:id="@+id/event_style_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/event_style_mark"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/event_style_mark"
                android:text="擅长领域"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/event_price_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/event_price_title"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/event_price_title"
                android:text="1000元-5000元不等\n依个人情况详细面谈" />

            <ImageView
                android:id="@+id/evenr_price_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:src="@drawable/event_price" />

            <TextView
                android:id="@+id/event_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/evenr_price_mark"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/evenr_price_mark"
                android:text="服务价格"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" >

            <ImageView
                android:id="@+id/event_partener_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:src="@drawable/event_partener" />

            <TextView
                android:id="@+id/event_partener_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_partener_title"
                android:layout_centerHorizontal="true"
                android:text="★★★★★" />

            <TextView
                android:id="@+id/event_partener_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/event_partener_mark"
                android:layout_alignRight="@+id/event_partener_component"
                android:layout_marginRight="15dp"
                android:text="评价指数"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>