<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bupt.umi.userinterface.find.CommunityActivity" >

    <Button
        android:id="@+id/public_community"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/public_community"
        android:text="公共社区" />

    <Button
        android:id="@+id/my_community"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/public_community"
        android:background="@drawable/my_community"
        android:text="我的社区" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/my_community"
        android:layout_toLeftOf="@+id/my_community"
        android:background="@drawable/location"
        android:text="定位服务" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/trip"
        android:text="旅游" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button3"
        android:background="@drawable/yummy"
        android:text="美食" />

    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/my_community"
        android:background="@drawable/pets"
        android:text="萌宠" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/button2"
        android:layout_below="@+id/button2"
        android:background="@drawable/sweep"
        android:text="家政服务" />

</RelativeLayout>
