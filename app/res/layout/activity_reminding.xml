<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerPadding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/activity_background"
    tools:context="com.bupt.umi.userinterface.me.RemindingActivity" >

    <RadioGroup
        android:id="@+id/reminding_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_background"
        android:showDividers="middle|beginning" >

        <RadioButton
            android:id="@+id/refreshing_time_option_10s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="允许所有人查看" 
            android:textSize="20sp"/>
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@drawable/divider" />
        <RadioButton
            android:id="@+id/refreshing_time_option_20s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="仅允许好友查看" 
            android:textSize="20sp"/>
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@drawable/divider" />
        <RadioButton
            android:id="@+id/refreshing_time_option_30s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="仅允许自己查看" 
            android:textSize="20sp"/>
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@drawable/divider" />
	    <RadioButton
	        android:id="@+id/refreshing_time_option_byhand"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
	        android:text="自定义" 
	        android:textSize="20sp"/> 
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@drawable/divider" />       
    </RadioGroup>

</LinearLayout>